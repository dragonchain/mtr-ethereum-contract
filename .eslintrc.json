{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true
  },
  "extends": ["airbnb"],
  "plugins": [
    "babel",
    "react",
    "promise",
    "jsx-a11y",
    "import",
    "react-hooks"
  ],
  "settings": {
    "import/resolver": {
      "node": {
          "moduleDirectory": [
              "node_modules",
              "src",
              "."
          ]
      }
    }
  },
  "globals": {
    "__DEV__": false,
    "__TEST__": false,
    "__PROD__": false,
    "__COVERAGE__": false
  },
  "rules": {
    "allowForLoopAfterthoughts": true,
    "react/prop-types": 0,
    "func-names": 0,
    "key-spacing": 0,
    "global-require": 0,
    "import/no-extraneous-dependencies": 0,
    "import/no-named-as-default": 0,
    "no-underscore-dangle": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] } ],
    "react/jsx-uses-vars": ["error"],
    // "react-hooks/rules-of-hooks": "error",
    "jsx-a11y/anchor-is-valid": [ "error", { "components": [ "Link" ] } ]
  }
}
